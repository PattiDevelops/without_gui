<form>
    <div class="form-group">
        <label for="name">Username</label>
        {{input value=name class="form-control" id="name"}}
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        {{input value=email class="form-control" id="email" type="email"}}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        {{input value=password class="form-control" id="password" type="password"}}
    </div>
    <div class="form-group">
        <label for="password_confirmation">Password Confirmation</label>
        {{input value=password_confirmation class="form-control" id="password_confirmation" type="password"}}
    </div>
    <button {{action 'register'}} class="btn btn-default" type="submit">Register</button>
</form>
